@page
@model StudyTracker.Pages.Assignments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div>
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewData["SuccessMessage"]
            </div>
        }

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["ErrorMessage"]
            </div>
        }
    </div>
    @if (ViewData["ErrorMessage"] == null)
    {
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Assignment.AppUserID" class="form-control" value="@Model.CurrentUser.Id" />
            <div class="form-group">
                <label asp-for="Assignment.CourseId" class="control-label"></label>
                <select asp-for="Assignment.CourseId" class ="form-control" asp-items="ViewBag.CourseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.SubjectId" class="control-label"></label>
                <select asp-for="Assignment.SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Title" class="control-label"></label>
                <input asp-for="Assignment.Title" class="form-control" />
                <span asp-validation-for="Assignment.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Description" class="control-label"></label>
                <input asp-for="Assignment.Description" class="form-control" />
                <span asp-validation-for="Assignment.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Priority" class="control-label"></label>
                <select asp-for="Assignment.Priority" class="form-control" asp-items="ViewBag.Priority"></select>
                <span asp-validation-for="Assignment.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Status" class="control-label"></label>
                <select asp-for="Assignment.Status" class="form-control" asp-items="ViewBag.Status"></select>
                <span asp-validation-for="Assignment.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Assignment.DueDate" class="control-label"></label>
                <input asp-for="Assignment.DueDate" class="form-control" />
                <span asp-validation-for="Assignment.DueDate" class="text-danger"></span>
            </div>
            <!--
                
            <div class="form-group">
                <label asp-for="Assignment.CompletionDate" class="control-label"></label>
                <input asp-for="Assignment.CompletionDate" class="form-control" />
                <span asp-validation-for="Assignment.CompletionDate" class="text-danger"></span>
            </div>

            -->

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    }
</div>
    

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
